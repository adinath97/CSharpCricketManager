        public static void IndiaBats()
        {
            Console.WriteLine("      ");
            Console.WriteLine("India will bat, and Australia will bowl");
            Console.WriteLine("      ");
            Batting_Scorecard_1_Names = India;

            bowler1 = Australia[10];
            bowler2 = Australia[9];
            bowler3 = Australia[8];
            bowler4 = Australia[7];
            bowler5 = Australia[6];
            currentBowler = bowler1;
            
            Random int1 = new Random();
            del1 = int1.Next(6,10);

            Random int2 = new Random();
            del2 = int1.Next(6,10);

            Random int3 = new Random();
            del3 = int1.Next(6,10);

            Random int4 = new Random();
            del4 = int1.Next(6,15);

            Random int5 = new Random();
            del5 = int1.Next(6,20);

            batsman1 = India[0];
            batsman2 = India[1];
            currentBatsman = batsman1;
            Innings_Complete = false;
            On_strike_Batsman_out = false;
            over_COMPLETE = false;

            //Console.WriteLine("HI THERE!");
            
            while (Innings_Complete == false)
            {
                //Console.WriteLine("HELLO THERE!");
                Console.WriteLine("Please enter batting intensities: L = 'low', M = 'medium', H = 'high'" );

                Console.WriteLine("     ");

                Console.Write(batsman1 + " : ");
                batting_intensity1 = Console.ReadLine();

                Console.WriteLine("     ");

                Console.Write(batsman2 + " : ");
                batting_intensity2 = Console.ReadLine();
                
                Console.WriteLine("     ");

                while (On_strike_Batsman_out == false && overs_total < 20 && over_COMPLETE == false)
                {
                    if(currentBatsman == batsman1) {
                        if(batting_intensity1 == "L") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_LOW.Count);
                            shot = Top_PossibleShots_LOW[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_LOW.Count);
                            shot = Middle_PossibleShots_LOW[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_LOW.Count);
                            shot = Bottom_PossibleShots_LOW[shot1];
                            }
                        }
                        if(batting_intensity1 == "M") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_MED.Count);
                            shot = Top_PossibleShots_MED[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_MED.Count);
                            shot = Middle_PossibleShots_MED[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_MED.Count);
                            shot = Bottom_PossibleShots_MED[shot1];
                        }
                        }
                        if(batting_intensity1 == "H") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_HIGH.Count);
                            shot = Top_PossibleShots_HIGH[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_HIGH.Count);
                            shot = Middle_PossibleShots_HIGH[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_HIGH.Count);
                            shot = Bottom_PossibleShots_HIGH[shot1];
                        }
                        }
                    }
                    else if(currentBatsman == batsman2) {
                        if(batting_intensity2 == "L") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_LOW.Count);
                            shot = Top_PossibleShots_LOW[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_LOW.Count);
                            shot = Middle_PossibleShots_LOW[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_LOW.Count);
                            shot = Bottom_PossibleShots_LOW[shot1];
                            }
                        }
                        if(batting_intensity2 == "M") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_MED.Count);
                            shot = Top_PossibleShots_MED[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_MED.Count);
                            shot = Middle_PossibleShots_MED[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_MED.Count);
                            shot = Bottom_PossibleShots_MED[shot1];
                        }
                        }
                        if(batting_intensity2 == "H") {
                            if(currentBatsman == India[0] || currentBatsman == India[1] || currentBatsman == India[2]) {
                            //Console.WriteLine("TOP ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Top_PossibleShots_HIGH.Count);
                            shot = Top_PossibleShots_HIGH[shot1];
                        }

                            if(currentBatsman == India[3] || currentBatsman == India[4] || currentBatsman == India[5] || currentBatsman == India[6]) {
                            //Console.WriteLine("MIDDLE ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Middle_PossibleShots_HIGH.Count);
                            shot = Middle_PossibleShots_HIGH[shot1];
                        }
                        
                            if(currentBatsman == India[7] || currentBatsman == India[8] || currentBatsman == India[9] || currentBatsman == India[10]) {
                            //Console.WriteLine("LOWER ORDER!");
                            Random hit1 = new Random();
                            int shot1 = hit1.Next(0, Bottom_PossibleShots_HIGH.Count);
                            shot = Bottom_PossibleShots_HIGH[shot1];
                        }
                        }
                    }
                    
                    if(bowler1_balls < 6 /*&& bowler1_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 1!!!");
                        currentBowler = bowler1;
                    }
                    else if(bowler2_balls < 6 /*&& bowler2_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 2!!!");
                        currentBowler = bowler2;
                    }
                    else if(bowler3_balls < 6 /*&& bowler3_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 3!!!");
                        currentBowler = bowler3;
                    }
                    else if(bowler4_balls < 6 /*&& bowler4_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 4!!!");
                        currentBowler = bowler4;
                    }
                    else if(bowler5_balls < 6 /*&& bowler5_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 5!!!");
                        currentBowler = bowler5;
                    }
                    
                    if(currentBowler == bowler1 /*&& bowler1_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 1 DEL");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del1);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler2 /*&& bowler2_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 2 DEL");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del2);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler3 /*&& bowler3_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 3 DEL");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del3);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler4 /*&& bowler4_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 4 DEL");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del4);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler5 /*&& bowler5_OVER_DONE == false*/) {
                        //Console.WriteLine("BOWLER 5 DEL");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del5);
                        delivery = delivery1;
                    }
                    
                    if (!(shot == delivery))
                    {
                        deliveries_total++;
                        if (shot == 1 || shot == 3)
                        {
                            if (currentBatsman == batsman1)
                            {
                                int balls4 = deliveries_total % 6;
                                int overs4 = deliveries_total / 6;
                                Console.WriteLine(overs4 + "." + balls4 + " : " + currentBatsman + " scored " + shot);
                                batsman_1_Score += shot;
                                balls1++;
                                currentBatsman = batsman2;
                                swap = true;

                            }
                            else if (currentBatsman == batsman2 && swap == false)
                            {
                                int balls4 = deliveries_total % 6;
                                int overs4 = deliveries_total / 6;
                                Console.WriteLine(overs4 + "." + balls4 + " : " + currentBatsman + " scored " + shot);
                                batsman_2_Score += shot;
                                balls2++;
                                currentBatsman = batsman1;
                            }
                            swap = false;
                        }
                        else if(shot == 7) {
                            //Console.WriteLine("GONE FOR 7!");
                            if (currentBatsman == batsman1)
                            {
                                balls1++;
                                //Batting_Scorecard_1_Names.Add(currentBatsman);
                                //Batting_Scorecard_1_Runs.Add(batsman_1_Score);
                                //Batting_Scorecard_1_Balls.Add(balls1);
                                if(currentBatsman == "Virat Kohli") {
                                    Virat_Kohli_Score = batsman_1_Score;
                                    Virat_Kohli_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Rohit Sharma") {
                                    Rohit_Sharma_Score = batsman_1_Score;
                                    Rohit_Sharma_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Rahul Dravid") {
                                    Rahul_Dravid_Score = batsman_1_Score;
                                    Rahul_Dravid_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Sachin Tendulkar") {
                                    Sachin_Tend_Score = batsman_1_Score;
                                    Sachin_Tend_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Saurav Ganguly") {
                                    Saurav_Ganguly_Score = batsman_1_Score;
                                    Saurav_Ganguly_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "VVS Laxman") {
                                    VVS_Laxman_Score = batsman_1_Score;
                                    VVS_Laxman_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "MS Dhoni") {
                                    MS_Dhoni_Score = batsman_1_Score;
                                    MS_Dhoni_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Irfan Pathan") {
                                    Irfan_Pathan_Score = batsman_1_Score;
                                    Irfan_Pathan_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Zaheer Khan") {
                                    Zaheer_Khan_Score = batsman_1_Score;
                                    Zaheer_Khan_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Ravichandran Ashwin") {
                                    Ravichandran_Ashwin_Score = batsman_1_Score;
                                    Ravichandran_Ashwin_DelPlayed = balls1;
                                }
                                else if(currentBatsman == "Ishant Sharma") {
                                    Ishant_Sharma_Score = batsman_1_Score;
                                    Ishant_Sharma_DelPlayed = balls1;
                                }
                                wickets_Lost++;
                                
                                Console.WriteLine(batsman1 + " OUT on " + batsman_1_Score
                                + " ( " + balls1 + " )");

                                batsman_1_Out = true;
                                if(wickets_Lost < 10) {
                                    balls1 = 0;
                                    batsman_1_Score = 0;
                                }
                                
                                if(deliveries_total % 6 == 0) {
                                    last_Ball_Wicket = true;
                                }
                            }
                            else if (currentBatsman == batsman2)
                            {
                                balls2++;
                                //Batting_Scorecard_1_Names.Add(currentBatsman);
                                //Batting_Scorecard_1_Runs.Add(batsman_2_Score);
                                //Batting_Scorecard_1_Balls.Add(balls2);
                                if(currentBatsman == "Virat Kohli") {
                                    Virat_Kohli_Score = batsman_2_Score;
                                    Virat_Kohli_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Rohit Sharma") {
                                    Rohit_Sharma_Score = batsman_2_Score;
                                    Rohit_Sharma_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Rahul Dravid") {
                                    Rahul_Dravid_Score = batsman_2_Score;
                                    Rahul_Dravid_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Sachin Tendulkar") {
                                    Sachin_Tend_Score = batsman_2_Score;
                                    Sachin_Tend_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Saurav Ganguly") {
                                    Saurav_Ganguly_Score = batsman_2_Score;
                                    Saurav_Ganguly_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "VVS Laxman") {
                                    VVS_Laxman_Score = batsman_2_Score;
                                    VVS_Laxman_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "MS Dhoni") {
                                    MS_Dhoni_Score = batsman_2_Score;
                                    MS_Dhoni_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Irfan Pathan") {
                                    Irfan_Pathan_Score = batsman_2_Score;
                                    Irfan_Pathan_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Zaheer Khan") {
                                    Zaheer_Khan_Score = batsman_2_Score;
                                    Zaheer_Khan_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Ravichandran Ashwin") {
                                    Ravichandran_Ashwin_Score = batsman_2_Score;
                                    Ravichandran_Ashwin_DelPlayed = balls2;
                                }
                                else if(currentBatsman == "Ishant Sharma") {
                                    Ishant_Sharma_Score = batsman_2_Score;
                                    Ishant_Sharma_DelPlayed = balls2;
                                }
                                wickets_Lost++;
                                
                                Console.WriteLine(batsman2 + " OUT on " + batsman_2_Score
                                + " ( " + balls2 + " )");
                                /*
                                Console.WriteLine("--------");
                                Console.WriteLine(currentBatsman + " is out on " + batsman_2_Score + " (" + balls2 + ")");
                                Console.WriteLine(batsman1 + " is not out on " + batsman_1_Score + " (" + balls1 + ")");
                                Console.WriteLine(team1 + " is " + innings_total + " / " + wickets_Lost + " in " + deliveries_total + " deliveries");
                                Console.WriteLine("--------");
                                */
                                batsman_2_Out = true;
                                if(wickets_Lost < 10) {
                                    balls2 = 0;
                                    batsman_2_Score = 0;
                                }
                                if(deliveries_total % 6 == 0) {
                                    last_Ball_Wicket = true;
                                }
                            }
                            On_strike_Batsman_out = true;
                            if(deliveries_total % 6 == 0) {
                                last_Ball_Wicket = true;
                            }
                        }
                        else if(!(shot == 7) && !(shot == 1) && !(shot == 3))
                        {
                            if (currentBatsman == batsman1)
                            {
                                int balls4 = deliveries_total % 6;
                                int overs4 = deliveries_total / 6;
                                Console.WriteLine(overs4 + "." + balls4 + " : " + currentBatsman + " scored " + shot);
                                batsman_1_Score += shot;
                                balls1++;
                            }
                            if (currentBatsman == batsman2)
                            {
                                int balls4 = deliveries_total % 6;
                                int overs4 = deliveries_total / 6;
                                Console.WriteLine(overs4 + "." + balls4 + " : " + currentBatsman + " scored " + shot);
                                batsman_2_Score += shot;
                                balls2++;
                            }
                        }
                        if(!(shot == 7)) {
                            innings_total += shot;
                        }
                        Console.WriteLine(team1 + " : " + innings_total + " / " + wickets_Lost);
                        Console.WriteLine("      ");
                    }
                    else if (shot == delivery)
                    {
                        deliveries_total++;
                        if (currentBatsman == batsman1)
                        {
                            balls1++;
                            //Batting_Scorecard_1_Names.Add(currentBatsman);
                            //Batting_Scorecard_1_Runs.Add(batsman_1_Score);
                            //Batting_Scorecard_1_Balls.Add(balls1);
                            if(currentBatsman == "Virat Kohli") {
                                Virat_Kohli_Score = batsman_1_Score;
                                Virat_Kohli_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Rohit Sharma") {
                                Rohit_Sharma_Score = batsman_1_Score;
                                Rohit_Sharma_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Rahul Dravid") {
                                Rahul_Dravid_Score = batsman_1_Score;
                                Rahul_Dravid_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Sachin Tendulkar") {
                                Sachin_Tend_Score = batsman_1_Score;
                                Sachin_Tend_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Saurav Ganguly") {
                                Saurav_Ganguly_Score = batsman_1_Score;
                                Saurav_Ganguly_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "VVS Laxman") {
                                VVS_Laxman_Score = batsman_1_Score;
                                VVS_Laxman_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "MS Dhoni") {
                                MS_Dhoni_Score = batsman_1_Score;
                                MS_Dhoni_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Irfan Pathan") {
                                Irfan_Pathan_Score = batsman_1_Score;
                                Irfan_Pathan_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Zaheer Khan") {
                                Zaheer_Khan_Score = batsman_1_Score;
                                Zaheer_Khan_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Ravichandran Ashwin") {
                                Ravichandran_Ashwin_Score = batsman_1_Score;
                                Ravichandran_Ashwin_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Ishant Sharma") {
                                Ishant_Sharma_Score = batsman_1_Score;
                                Ishant_Sharma_DelPlayed = balls1;
                            }
