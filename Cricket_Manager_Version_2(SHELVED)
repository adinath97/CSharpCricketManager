                        }
                    }
                    else if(currentBowler == bowler5) {
                        bowler5_balls++;
                        if(bowler5_balls == 6) {
                            //bowler5_OVER_DONE = true;
                            bowler5_overs++;
                            overs_total++;
                            currentBowler = bowler1;
                            bowler1_balls = 0;
                        }
                    }
                }
                if (batsman_1_Out == true && wickets_Lost < 10 && last_Ball_Wicket == false)
                {
                    //Console.WriteLine("Batsman 1 OUT");
                    batsman_1_Out = false;
                    batsman1 = India[wickets_Lost + 1];
                    currentBatsman = India[wickets_Lost + 1];
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("1E HELLO THERE!");
                }
                else if (batsman_1_Out == true && wickets_Lost < 10 && last_Ball_Wicket == true)
                {
                    //Console.WriteLine("Batsman 1 OUT -- last ball");
                    batsman_1_Out = false;
                    batsman1 = India[wickets_Lost + 1];
                    currentBatsman = batsman2;
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("1E HELLO THERE!");
                }
                else if (batsman_2_Out == true && wickets_Lost < 10 && last_Ball_Wicket == false)
                {
                    //Console.WriteLine("Batsman 2 OUT");
                    batsman_2_Out = false;
                    batsman2 = India[wickets_Lost + 1];
                    currentBatsman = India[wickets_Lost + 1];
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("2E HELLO THERE!");
                }
                else if (batsman_2_Out == true && wickets_Lost < 10 && last_Ball_Wicket == true)
                {
                   //Console.WriteLine("Batsman 2 OUT -- last ball");
                    batsman_2_Out = false;
                    batsman2 = India[wickets_Lost + 1];
                    currentBatsman = batsman1;
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("2E HELLO THERE!");
                }
                if(overs_total < 20 && over_COMPLETE == true) {
                    over_COMPLETE = false;
                }
                if(overs_total == 20) {
                    Innings_Complete = true;
                }
                last_Ball_Wicket = false;
                if (wickets_Lost == 10 || Innings_Complete == true)
                {
                    Innings_Complete = true;
                    if(batsman_1_Out == false) {
                        if(batsman1 == "Virat Kohli") {
                                Batting_Scorecard_1_Names[0] = "Virat Kohli *";
                                Virat_Kohli_Score = batsman_1_Score;
                                Virat_Kohli_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Rohit Sharma") {
                                Batting_Scorecard_1_Names[1] = "Rohit Sharma *";
                                Rohit_Sharma_Score = batsman_1_Score;
                                Rohit_Sharma_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Rahul Dravid") {
                                Batting_Scorecard_1_Names[3] = "Rahul Dravid *";
                                Rahul_Dravid_Score = batsman_1_Score;
                                Rahul_Dravid_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Sachin Tendulkar") {
                                Batting_Scorecard_1_Names[4] = "Sachin Tendulkar *";
                                Sachin_Tend_Score = batsman_1_Score;
                                Sachin_Tend_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Saurav Ganguly") {
                                Batting_Scorecard_1_Names[2] = "Saurav Ganguly *";
                                Saurav_Ganguly_Score = batsman_1_Score;
                                Saurav_Ganguly_DelPlayed = balls1;
                            }
                            else if(batsman1 == "VVS Laxman") {
                                Batting_Scorecard_1_Names[5] = "VVS Laxman *";
                                VVS_Laxman_Score = batsman_1_Score;
                                VVS_Laxman_DelPlayed = balls1;
                            }
                            else if(batsman1 == "MS Dhoni") {
                                Batting_Scorecard_1_Names[6] = "MS Dhoni *";
                                MS_Dhoni_Score = batsman_1_Score;
                                MS_Dhoni_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Irfan Pathan") {
                                Batting_Scorecard_1_Names[7] = "Irfan Pathan *";
                                Irfan_Pathan_Score = batsman_1_Score;
                                Irfan_Pathan_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Zaheer Khan") {
                                Batting_Scorecard_1_Names[8] = "Zaheer Khan *";
                                Zaheer_Khan_Score = batsman_1_Score;
                                Zaheer_Khan_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Ravichandran Ashwin") {
                                Batting_Scorecard_1_Names[9] = "Ravichandran Ashwin *";
                                Ravichandran_Ashwin_Score = batsman_1_Score;
                                Ravichandran_Ashwin_DelPlayed = balls1;
