            Batting_Scorecard_1_Balls.Add(Rahul_Dravid_DelPlayed);
            Batting_Scorecard_1_Balls.Add(Sachin_Tend_DelPlayed);
            Batting_Scorecard_1_Balls.Add(VVS_Laxman_DelPlayed);
            Batting_Scorecard_1_Balls.Add(MS_Dhoni_DelPlayed);
            Batting_Scorecard_1_Balls.Add(Irfan_Pathan_DelPlayed);
            Batting_Scorecard_1_Balls.Add(Zaheer_Khan_DelPlayed);
            Batting_Scorecard_1_Balls.Add(Ravichandran_Ashwin_DelPlayed);
            Batting_Scorecard_1_Balls.Add(Ishant_Sharma_DelPlayed);

            Console.WriteLine("       ");
            Console.WriteLine("Batting Scorecard: ");
            Console.WriteLine("       ");

            for(int i = 0; i < 11; i++) {
                 Console.WriteLine(Batting_Scorecard_1_Names[i] + " : " + Batting_Scorecard_1_Runs[i]
                 + " (" + Batting_Scorecard_1_Balls[i] + ") ");
            }

            int balls = deliveries_total % 6;
            int overs = deliveries_total / 6;
            Console.WriteLine("       ");
            Console.WriteLine(team1 + " : " + innings_total + " / " + wickets_Lost 
            + " in " + overs + "." + balls + " overs.");

            first_Innings_total = innings_total;
        }
        public static void AustraliaBats()
        {
            Console.WriteLine("      ");
            Console.WriteLine("_________________________");
            Console.WriteLine("_________________________");
            Console.WriteLine("      ");
            Console.WriteLine("Australia will bat, and India will bowl");
            Console.WriteLine("      ");
            Console.WriteLine("Australia need " + (first_Innings_total + 1) + " runs to win");
            Console.WriteLine("      ");
            
            Batting_Scorecard_2_Names = Australia;

            bowler1 = India[10];
            bowler2 = India[9];
            bowler3 = India[8];
            bowler4 = India[7];
            bowler5 = India[6];

            currentBowler = bowler1;
            
            Random int1 = new Random();
            del1 = int1.Next(6,10);

            Random int2 = new Random();
            del2 = int1.Next(6,10);

            Random int3 = new Random();
            del3 = int1.Next(6,10);

            Random int4 = new Random();
            del4 = int1.Next(6,15);

            Random int5 = new Random();
            del5 = int1.Next(6,20);

            batsman1 = Australia[0];
            batsman2 = Australia[1];
            currentBatsman = batsman1;
            Innings_Complete = false;
            On_strike_Batsman_out = false;
            
            while (Innings_Complete == false)
            {
                while (On_strike_Batsman_out == false)
                {
                    if(currentBatsman == Australia[0] || currentBatsman == Australia[1] || currentBatsman == Australia[2]) {
                        //Console.WriteLine("TOP ORDER!");
                        Random hit1 = new Random();
                        int shot1 = hit1.Next(0, Top_PossibleShots_LOW.Count);
                        shot = Top_PossibleShots_LOW[shot1];
                    }

                    if(currentBatsman == Australia[3] || currentBatsman == Australia[4] || currentBatsman == Australia[5] || currentBatsman == Australia[6]) {
                        //Console.WriteLine("MIDDLE ORDER!");
                        Random hit1 = new Random();
                        int shot1 = hit1.Next(0, Middle_PossibleShots_LOW.Count);
                        shot = Middle_PossibleShots_LOW[shot1];
                    }
                    
                    if(currentBatsman == Australia[7] || currentBatsman == Australia[8] || currentBatsman == Australia[9] || currentBatsman == Australia[10]) {
                        //Console.WriteLine("LOWER ORDER!");
                        Random hit1 = new Random();
                        int shot1 = hit1.Next(0, Bottom_PossibleShots_LOW.Count);
                        shot = Bottom_PossibleShots_LOW[shot1];
                    }

                    if(bowler1_balls < 6 && bowler1_OVER_DONE == false) {
                        Console.WriteLine("BOWLER 1!!!");
                        currentBowler = bowler1;
                    }
                    else if(bowler2_balls < 6 && bowler2_OVER_DONE == false) {
                        Console.WriteLine("BOWLER 2!!!");
                        currentBowler = bowler2;
                    }
                    else if(bowler3_balls < 6 && bowler3_OVER_DONE == false) {
                        Console.WriteLine("BOWLER 3!!!");
                        currentBowler = bowler3;
                    }
                    else if(bowler4_balls < 6 && bowler4_OVER_DONE == false) {
                        Console.WriteLine("BOWLER 4!!!");
                        currentBowler = bowler4;
                    }
                    else if(bowler5_balls < 6 && bowler5_OVER_DONE == false) {
                        Console.WriteLine("BOWLER 5!!!");
                        currentBowler = bowler5;
                    }
                    

                    if(currentBowler == bowler1) {
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del1);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler2) {
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del2);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler3) {
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del3);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler4) {
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del4);
                        delivery = delivery1;
                    }
                    else if(currentBowler == bowler5) {
                        //Console.WriteLine("BOWLER 5!!!");
                        Random ball1 = new Random();
                        int delivery1 = ball1.Next(0, del5);
                        delivery = delivery1;
                    }
                    

                    if (!(shot == delivery))
                    {
                        if (shot == 1 || shot == 3)
                        {
                            if (currentBatsman == batsman1)
                            {
                                Console.WriteLine(currentBatsman + " scored " + shot);
                                batsman_1_Score += shot;
                                balls1++;
                                currentBatsman = batsman2;
                                swap = true;

                            }
                            else if (currentBatsman == batsman2 && swap == false)
                            {
                                Console.WriteLine(currentBatsman + " scored " + shot);
                                batsman_2_Score += shot;
                                balls2++;
                                currentBatsman = batsman1;
                            }
                            swap = false;
                        }
                        else
                        {
                            if (currentBatsman == batsman1)
                            {
                                Console.WriteLine(currentBatsman + " scored " + shot);
                                batsman_1_Score += shot;
                                balls1++;
                            }
                            if (currentBatsman == batsman2)
                            {
                                Console.WriteLine(currentBatsman + " scored " + shot);
                                batsman_2_Score += shot;
                                balls2++;
                            }
                        }
                        innings_total += shot;
                        deliveries_total++;
                    }
                    else if (shot == delivery)
                    {
                        deliveries_total++;
                        if (currentBatsman == batsman1)
                        {
                            balls1++;
                            //Batting_Scorecard_1_Names.Add(currentBatsman);
                            //Batting_Scorecard_1_Runs.Add(batsman_1_Score);
                            //Batting_Scorecard_1_Balls.Add(balls1);
                            if(currentBatsman == "David Warner") {
                                David_Warner_score = batsman_1_Score;
                                David_Warner_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Steven Smith") {
                                Steven_Smith_score = batsman_1_Score;
                                Steven_Smith_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Michael Clarke") {
                                Michael_Clarke_score = batsman_1_Score;
                                Michael_Clarke_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Shaun Marsh") {
                                Shaun_Marsh_score = batsman_1_Score;
                                Shaun_Marsh_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Ricky Ponting") {
                                Ricky_Ponting_score = batsman_1_Score;
                                Ricky_Ponting_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Adam Gilchrist") {
                                Adam_Gilchrist_score = batsman_1_Score;
                                Adam_Gilchrist_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Glen Maxwell") {
                                Glen_Maxwell_score = batsman_1_Score;
                                Glen_Maxwell_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Mitchell Starc") {
                                Mitchell_Starc_score = batsman_1_Score;
                                Mitchell_Starc_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Josh Hazelwood") {
                                Josh_Hazelwood_score = batsman_1_Score;
                                Josh_Hazelwood_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "Nathan Lyon") {
                                Nathan_Lyon_score = batsman_1_Score;
                                Nathan_Lyon_DelPlayed = balls1;
                            }
                            else if(currentBatsman == "James Pattinson") {
                                James_Pattinson_score = batsman_1_Score;
                                James_Pattinson_DelPlayed = balls1;
                            }
                            wickets_Lost++;
                            
                            Console.WriteLine(batsman1 + " OUT!");
                            /*
                            Console.WriteLine("--------");
                            Console.WriteLine(currentBatsman + " is out on " + batsman_1_Score + " (" + balls1 + ")");
                            Console.WriteLine(batsman2 + " is not out on " + batsman_2_Score + " (" + balls2 + ")");
                            Console.WriteLine(team1 + " is " + innings_total + " / " + wickets_Lost + " in " + deliveries_total + " deliveries" );
                            Console.WriteLine("--------");
                            */
                            batsman_1_Out = true;
                            if(wickets_Lost < 10) {
                                balls1 = 0;
                                batsman_1_Score = 0;
                            }
                            
                            if(deliveries_total % 6 == 0) {
                                last_Ball_Wicket = true;
                            }
                        }
                        else if (currentBatsman == batsman2)
                        {
                            balls2++;
                            //Batting_Scorecard_1_Names.Add(currentBatsman);
                            //Batting_Scorecard_1_Runs.Add(batsman_2_Score);
                            //Batting_Scorecard_1_Balls.Add(balls2);
                            if(currentBatsman == "David Warner") {
                                David_Warner_score = batsman_2_Score;
                                David_Warner_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Steven Smith") {
                                Steven_Smith_score = batsman_2_Score;
                                Steven_Smith_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Michael Clarke") {
                                Michael_Clarke_score = batsman_2_Score;
                                Michael_Clarke_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Shaun Marsh") {
                                Shaun_Marsh_score = batsman_2_Score;
                                Shaun_Marsh_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Ricky Ponting") {
                                Ricky_Ponting_score = batsman_2_Score;
                                Ricky_Ponting_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Adam Gilchrist") {
                                Adam_Gilchrist_score = batsman_2_Score;
                                Adam_Gilchrist_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Glen Maxwell") {
                                Glen_Maxwell_score = batsman_2_Score;
                                Glen_Maxwell_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Mitchell Starc") {
                                Mitchell_Starc_score = batsman_2_Score;
                                Mitchell_Starc_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Josh Hazelwood") {
                                Josh_Hazelwood_score = batsman_2_Score;
                                Josh_Hazelwood_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "Nathan Lyon") {
                                Nathan_Lyon_score = batsman_2_Score;
                                Nathan_Lyon_DelPlayed = balls2;
                            }
                            else if(currentBatsman == "James Pattinson") {
                                James_Pattinson_score = batsman_2_Score;
                                James_Pattinson_DelPlayed = balls2;
                            }
                            wickets_Lost++;
                            
                            Console.WriteLine(batsman2 + " OUT!");
                            /*
                            Console.WriteLine("--------");
                            Console.WriteLine(currentBatsman + " is out on " + batsman_2_Score + " (" + balls2 + ")");
                            Console.WriteLine(batsman1 + " is not out on " + batsman_1_Score + " (" + balls1 + ")");
                            Console.WriteLine(team1 + " is " + innings_total + " / " + wickets_Lost + " in " + deliveries_total + " deliveries");
                            Console.WriteLine("--------");
                            */
                            batsman_2_Out = true;
                            if(wickets_Lost < 10) {
                                balls2 = 0;
                                batsman_2_Score = 0;
                            }
                            if(deliveries_total % 6 == 0) {
                                last_Ball_Wicket = true;
                            }
                        }

                        On_strike_Batsman_out = true;
                    }

                    if(deliveries_total % 6 == 0) {

                        int balls3 = deliveries_total % 6;
                        int overs3 = deliveries_total / 6;
                        Console.WriteLine("       ");
                        Console.WriteLine(team2 + " : " + innings_total + " / " + wickets_Lost 
                        + " in " + overs3 + "." + balls3 + " overs.");
                        Console.WriteLine("       ");

                        if(overs3 == 20) {
                            overs_total = 20;
                        }
                        
                        bool keepGoing = false;
                        if(currentBatsman == batsman1) {
                            currentBatsman = batsman2;
                            keepGoing = true; 
                        }
                        else if(currentBatsman == batsman2 && keepGoing == false) {
                            currentBatsman = batsman1;
                        }
                        keepGoing = false;
                    }
                    
                    if(currentBowler == bowler1) {
                        bowler1_balls++;
                        if(bowler1_balls == 6) {
                            bowler1_OVER_DONE = true;
                            bowler1_overs++;
                            overs_total++;
                        }
                    }
                    else if(currentBowler == bowler2) {
                        bowler2_balls++;
                        if(bowler2_balls == 6) {
                            bowler2_OVER_DONE = true;
                            bowler2_overs++;
                            overs_total++;
                        }
                    }
                    else if(currentBowler == bowler3) {
                        bowler3_balls++;
                        if(bowler3_balls == 6) {
                            bowler3_OVER_DONE = true;
                            bowler3_overs++;
                            overs_total++;
                        }
                    }
                    else if(currentBowler == bowler4) {
                        bowler4_balls++;
                        if(bowler4_balls == 6) {
                            bowler4_OVER_DONE = true;
                            bowler4_overs++;
                            overs_total++;
                        }
                    }
                    else if(currentBowler == bowler5) {
                        bowler5_balls++;
                        if(bowler5_balls == 6) {
                            bowler5_OVER_DONE = true;
                            bowler5_overs++;
                            overs_total++;
                        }
                    }

                    if(innings_total > first_Innings_total || overs_total == 20) {
                        Innings_Complete = true;
                        On_strike_Batsman_out = true;
                    }
                }
                if (batsman_1_Out == true && wickets_Lost < 10 && last_Ball_Wicket == false)
                {
                    //Console.WriteLine("1 HELLO THERE!");
                    batsman_1_Out = false;
                    batsman1 = Australia[wickets_Lost + 1];
                    currentBatsman = Australia[wickets_Lost + 1];
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("1E HELLO THERE!");
                }
                else if (batsman_1_Out == true && wickets_Lost < 10 && last_Ball_Wicket == true)
                {
                    //Console.WriteLine("1 HELLO THERE!");
                    batsman_1_Out = false;
                    batsman1 = Australia[wickets_Lost + 1];
                    currentBatsman = batsman2;
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("1E HELLO THERE!");
                }
                else if (batsman_2_Out == true && wickets_Lost < 10 && last_Ball_Wicket == false)
                {
                    //Console.WriteLine("2 HELLO THERE!");
                    batsman_2_Out = false;
                    batsman2 = Australia[wickets_Lost + 1];
                    currentBatsman = Australia[wickets_Lost + 1];
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("2E HELLO THERE!");
                }
                else if (batsman_2_Out == true && wickets_Lost < 10 && last_Ball_Wicket == true)
                {
                    //Console.WriteLine("2 HELLO THERE!");
                    batsman_2_Out = false;
                    batsman2 = Australia[wickets_Lost + 1];
                    currentBatsman = batsman1;
                    On_strike_Batsman_out = false;
                    //Console.WriteLine("2E HELLO THERE!");
                }
                last_Ball_Wicket = false;
                if (wickets_Lost == 10 || Innings_Complete == true)
                {
                    Innings_Complete = true;
                    if(batsman_1_Out == false) {
                        if(batsman1 == "Steven Smith") {
                                Batting_Scorecard_2_Names[1] = "Steven Smith *";
                                Steven_Smith_score = batsman_1_Score;
                                Steven_Smith_DelPlayed = balls1;
                            }
                            else if(batsman1 == "David Warner") {
                                Batting_Scorecard_2_Names[0] = "David Warner *";
                                David_Warner_score = batsman_1_Score;
                                David_Warner_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Michael Clarke") {
                                Batting_Scorecard_2_Names[2] = "Michael Clarke *";
                                Michael_Clarke_score = batsman_1_Score;
                                Michael_Clarke_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Shaun Marsh") {
                                Batting_Scorecard_2_Names[3] = "Shaun Marsh *";
                                Shaun_Marsh_score = batsman_1_Score;
                                Shaun_Marsh_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Ricky Ponting") {
                                Batting_Scorecard_2_Names[4] = "Ricky Ponting *";
                                Ricky_Ponting_score = batsman_1_Score;
                                Ricky_Ponting_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Adam Gilchrist") {
                                Batting_Scorecard_2_Names[5] = "Adam Gilchrist *";
                                Adam_Gilchrist_score = batsman_1_Score;
                                Adam_Gilchrist_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Glen Maxwell") {
                                Batting_Scorecard_2_Names[6] = "Glen Maxwell *";
                                Glen_Maxwell_score = batsman_1_Score;
                                Glen_Maxwell_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Mitchell Starc") {
                                Batting_Scorecard_2_Names[7] = "Mitchell Starc *";
                                Mitchell_Starc_score = batsman_1_Score;
                                Mitchell_Starc_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Josh Hazelwood") {
                                Batting_Scorecard_2_Names[8] = "Josh Hazelwood *";
                                Josh_Hazelwood_score = batsman_1_Score;
                                Josh_Hazelwood_DelPlayed = balls1;
                            }
                            else if(batsman1 == "Nathan Lyon") {
                                Batting_Scorecard_2_Names[9] = "Nathan Lyon *";
                                Nathan_Lyon_score = batsman_1_Score;
                                Nathan_Lyon_DelPlayed = balls1;
                            }
                            else if(batsman1 == "James Pattinson") {
                                Batting_Scorecard_2_Names[10] = "James Pattinson *";
                                James_Pattinson_score = batsman_1_Score;
                                James_Pattinson_DelPlayed = balls1;
                            }
                    }
                    if(batsman_2_Out == false) {
                        if(batsman2 == "Steven Smith") {
                                Batting_Scorecard_2_Names[1] = "Steven Smith *";
                                Steven_Smith_score = batsman_2_Score;
                                Steven_Smith_DelPlayed = balls2;
                            }
                            else if(batsman2 == "David Warner") {
                                Batting_Scorecard_2_Names[0] = "David Warner *";
                                David_Warner_score = batsman_2_Score;
                                David_Warner_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Michael Clarke") {
                                Batting_Scorecard_2_Names[2] = "Michael Clarke *";
                                Michael_Clarke_score = batsman_2_Score;
                                Michael_Clarke_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Shaun Marsh") {
                                Batting_Scorecard_2_Names[3] = "Shaun Marsh *";
                                Shaun_Marsh_score = batsman_2_Score;
                                Shaun_Marsh_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Ricky Ponting") {
                                Batting_Scorecard_2_Names[4] = "Ricky Ponting *";
                                Ricky_Ponting_score = batsman_2_Score;
                                Ricky_Ponting_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Adam Gilchrist") {
                                Batting_Scorecard_2_Names[5] = "Adam Gilchrist *";
                                Adam_Gilchrist_score = batsman_2_Score;
                                Adam_Gilchrist_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Glen Maxwell") {
                                Batting_Scorecard_2_Names[6] = "Glen Maxwell *";
                                Glen_Maxwell_score = batsman_2_Score;
                                Glen_Maxwell_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Mitchell Starc") {
                                Batting_Scorecard_2_Names[7] = "Mitchell Starc *";
                                Mitchell_Starc_score = batsman_2_Score;
                                Mitchell_Starc_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Josh Hazelwood") {
                                Batting_Scorecard_2_Names[8] = "Josh Hazelwood *";
                                Josh_Hazelwood_score = batsman_2_Score;
                                Josh_Hazelwood_DelPlayed = balls2;
                            }
                            else if(batsman2 == "Nathan Lyon") {
                                Batting_Scorecard_2_Names[9] = "Nathan Lyon *";
                                Nathan_Lyon_score = batsman_2_Score;
                                Nathan_Lyon_DelPlayed = balls2;
                            }
                            else if(batsman2 == "James Pattinson") {
                                Batting_Scorecard_2_Names[10] = "James Pattinson *";
                                James_Pattinson_score = batsman_2_Score;
                                James_Pattinson_DelPlayed = balls2;
                            }
                    }
                }
            }

            Batting_Scorecard_2_Runs.Add(David_Warner_score);
            Batting_Scorecard_2_Runs.Add(Steven_Smith_score);
            Batting_Scorecard_2_Runs.Add(Michael_Clarke_score);
            Batting_Scorecard_2_Runs.Add(Shaun_Marsh_score);
            Batting_Scorecard_2_Runs.Add(Ricky_Ponting_score);
            Batting_Scorecard_2_Runs.Add(Adam_Gilchrist_score);
            Batting_Scorecard_2_Runs.Add(Glen_Maxwell_score);
            Batting_Scorecard_2_Runs.Add(Mitchell_Starc_score);
            Batting_Scorecard_2_Runs.Add(Josh_Hazelwood_score);
            Batting_Scorecard_2_Runs.Add(Nathan_Lyon_score);
            Batting_Scorecard_2_Runs.Add(James_Pattinson_score);

            Batting_Scorecard_2_Balls.Add(David_Warner_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Steven_Smith_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Michael_Clarke_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Shaun_Marsh_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Ricky_Ponting_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Adam_Gilchrist_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Glen_Maxwell_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Mitchell_Starc_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Josh_Hazelwood_DelPlayed);
            Batting_Scorecard_2_Balls.Add(Nathan_Lyon_DelPlayed);
            Batting_Scorecard_2_Balls.Add(James_Pattinson_DelPlayed);

            Console.WriteLine("       ");
            Console.WriteLine("Batting Scorecard: ");
            Console.WriteLine("       ");

            for(int i = 0; i < 11; i++) {
                 Console.WriteLine(Batting_Scorecard_2_Names[i] + " " + Batting_Scorecard_2_Runs[i]
                 + " (" + Batting_Scorecard_2_Balls[i] + ") ");
            }

            int balls = deliveries_total % 6;
            int overs = deliveries_total / 6;
            Console.WriteLine("       ");
            Console.WriteLine(team2 + " : " + innings_total + " / " + wickets_Lost 
            + " in " + overs + "." + balls + " overs.");

            if(first_Innings_total < innings_total) {
                Console.WriteLine("    ");
                Console.WriteLine(team2 + " win by " + (10 - wickets_Lost) + " wickets");
            }

            else if(wickets_Lost == 10 || innings_total < first_Innings_total) {
                Console.WriteLine("    ");
                Console.WriteLine(team1 + " won by " + (first_Innings_total - innings_total) + " runs.");
                Console.WriteLine("    ");
            }
        }
        
    }
}
